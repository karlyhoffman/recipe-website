{
  "Main": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Recipe Title",
        "placeholder": "Recipe Title"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "Slug",
        "placeholder": "recipe-slug"
      }
    },
    "source": {
      "type": "StructuredText",
      "config": {
        "single": "paragraph, hyperlink",
        "allowTargetBlank": true,
        "label": "Source/Inspiration",
        "placeholder": "Where did you find the recipe?"
      }
    },
    "servings": {
      "type": "Number",
      "config": {
        "label": "Servings",
        "placeholder": "Number of meals"
      }
    },
    "cost": {
      "type": "Number",
      "config": {
        "label": "Cost",
        "placeholder": "Rough cost of meal"
      }
    },
    "prep_time": {
      "type": "StructuredText",
      "config": {
        "single": "paragraph, strong, em",
        "label": "Prep Time",
        "placeholder": "How long to prep ingredients?"
      }
    },
    "total_time": {
      "type": "StructuredText",
      "config": {
        "single": "paragraph, strong, em",
        "label": "Total Time",
        "placeholder": "Total time to cook recipe"
      }
    },
    "last_cooked_date": {
      "type": "Date",
      "config": {
        "label": "Last Cooked",
        "placeholder": "When did you last make this recipe?"
      }
    },
    "recipe_photo": {
      "type": "Image",
      "config": {
        "constraint": {},
        "thumbnails": [],
        "label": "Recipe Photo"
      }
    }
  },
  "Notes": {
    "recipe_notes": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, preformatted, strong, em, hyperlink, image, embed, list-item, o-list-item",
        "allowTargetBlank": true,
        "label": "Recipe Notes",
        "placeholder": "Any special to note about this recipe?"
      }
    }
  },
  "Ingredients": {
    "ingredients": {
      "type": "Group",
      "config": {
        "fields": {
          "ingredient": {
            "type": "StructuredText",
            "config": {
              "single": "paragraph, strong, em, hyperlink",
              "allowTargetBlank": true,
              "label": "Ingredient",
              "placeholder": "Ingredient name and quantity"
            }
          }
        },
        "label": "Ingredients List"
      }
    }
  },
  "Instructions": {
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {
          "recipe_instruction": [],
          "instruction_heading": []
        },
        "choices": {
          "recipe_instruction": {
            "type": "Slice",
            "fieldset": "Recipe Instruction",
            "description": "Describe a Step",
            "icon": "assignment",
            "display": "list",
            "non-repeat": {
              "instruction": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, preformatted, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "Instruction",
                  "placeholder": "Write a recipe step here."
                }
              }
            },
            "repeat": {}
          },
          "instruction_heading": {
            "type": "Slice",
            "fieldset": "Instruction Heading",
            "description": "Heading for New Section",
            "icon": "text_format",
            "display": "list",
            "non-repeat": {
              "instruction_heading": {
                "type": "StructuredText",
                "config": {
                  "single": "heading4",
                  "label": "Instruction Heading",
                  "placeholder": "Write a new heading here."
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  },
  "Related Recipes": {
    "related_recipes": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["recipe"],
        "label": "Related Recipes",
        "placeholder": "Select a related recipe"
      }
    }
  },
  "Tags": {
    "main_ingredient_tags": {
      "type": "Group",
      "config": {
        "fields": {
          "ingredient_tag": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["ingredient_tag"],
              "label": "Ingredient Tag",
              "placeholder": "Select an Ingredient Tag"
            }
          }
        },
        "label": "Main Ingredient Tags"
      }
    },
    "cuisine_tags": {
      "type": "Group",
      "config": {
        "fields": {
          "cuisine_tag": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["cuisine_tag"],
              "label": "Cuisine Tag",
              "placeholder": "Select a Cuisine Tag"
            }
          }
        },
        "label": "Cuisine Tags"
      }
    },
    "type_tags": {
      "type": "Group",
      "config": {
        "fields": {
          "type_tag": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["type_tag"],
              "label": "Type Tag",
              "placeholder": "Select a Type Tag (ie Main, Side)"
            }
          }
        },
        "label": "Dish Type Tags"
      }
    },
    "season_tags": {
      "type": "Group",
      "config": {
        "fields": {
          "season_tag": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["season_tag"],
              "label": "Season Tag",
              "placeholder": "Select a Season Tag (ie Winter, Thanksgiving)"
            }
          }
        },
        "label": "Season Tags"
      }
    },
    "time_tags": {
      "type": "Group",
      "config": {
        "fields": {
          "time_tag": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["time_tag"],
              "label": "Time Tag",
              "placeholder": "Select a Time Tag"
            }
          }
        },
        "label": "Time Tags"
      }
    },
    "day_tags": {
      "type": "Group",
      "config": {
        "fields": {
          "day_tag": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["day_tag"],
              "label": "Day Tag",
              "placeholder": "Select a Day Tag (ie Weekday)"
            }
          }
        },
        "label": "Day Tags"
      }
    }
  }
}
